{% extends 'base.html.twig' %}

{% block title %}Cliente index{% endblock %}

{% block body %}
    <h1>Listado de clientes</h1>
    <br/>
    <table class="table table-dark table-bordered">
        <thead>
            <tr>
                
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cliente in clientes %}
            <tr>
                
                <td>{{ cliente.name }}</td>
                <td>
                    <a class="bn54" href="{{ path('app_cliente_show', {'id': cliente.id}) }}">ver</a>
                    <a  class="bn54" href="{{ path('app_cliente_edit', {'id': cliente.id}) }}">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br/>

    <a class="btn btn-primary" href="{{ path('app_cliente_new') }}">Crear nuevo cliente </a>
{% endblock %}
